<Window x:Class="SakuraCraftLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Name="Window"
        Width="850"
        Height="550">


    <Border Background="#FFDEE9FF"
            BorderBrush="#EBEDF3"
            Padding="30"
            CornerRadius="25"
            MouseDown="Border_MouseDown">

        
            <Border CornerRadius="40">
            <Border.Background>
                <LinearGradientBrush StartPoint="0 0"
                                     EndPoint="0 1">

                    <GradientStop Color="#F8F8FF"
                                  Offset="0"/>

                    <GradientStop Color="#EDEDEF"
                                  Offset="1"/>

                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- 导航 -->
                <Border Grid.Column="0"
                        CornerRadius="20 0 0 20"
                        Background="#FFB6B6FD">
                    <Grid>
                        <StackPanel VerticalAlignment="Top"
                                    Margin="10,40,10,0">
                            <RadioButton x:Name="RadioButton_HomePage"
                                         IsChecked="True"
                                         Content="Home"
                                         GroupName="Pages"
                                         Checked="PageRadioButton_Checked">
                            </RadioButton>
                            <RadioButton x:Name="RadioButton_Accounts"
                                         Content="Accounts"
                                         GroupName="Pages">
                            </RadioButton>
                            <RadioButton x:Name="RadioButton_SettingsPage"
                                         Content="Settings"
                                         GroupName="Pages"
                                         Checked="PageRadioButton_Checked">
                            </RadioButton>
                        </StackPanel>


                        <StackPanel VerticalAlignment="Bottom">
                            <!-- 分隔线 -->
                            <Separator Background="#877CC5"
                                       Margin="20 0 20 0"
                                       Height="10"/>

                            <!-- 最小化 -->
                            <Button Click="Window_MinimizeButton_Click"
                                    Content="&#xf068;"
                                    Style="{DynamicResource IndexButton}">
                            </Button>

                            <!-- 程序退出 -->
                            <Button Click="CloseButton_Click"
                                    
                                    Content="&#xf00d;"
                                    Style="{DynamicResource IndexButton}">
                            </Button>
                        </StackPanel>
                    </Grid>

                </Border>

                <Border Grid.Column="1">
                    <Frame x:Name="PageFrame" NavigationUIVisibility="Hidden"/>
                </Border>

            </Grid>
        </Border>

    </Border>

</Window>
